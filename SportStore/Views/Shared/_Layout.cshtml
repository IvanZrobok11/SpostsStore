<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link asp-href-include="/lib/font-awesome/css/*.css" rel="stylesheet" />*@
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-expand-md bg-dark" role="navigation">     
        <div class="row">
            <a class="col navbar-brand text-center" href="#">Sports Store</a>
            <div class="col-lg text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync(nameof(NavigationMenu))
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
