@model Product
<div class="card card-link m-1 p-1">
    <div class="bg-dark p-1">
        <h4>
            @Model.Name
            <span class="badge badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form asp-action="AddToCart" asp-controller="Cart" method="post" id="@Model.ProductId">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />@*для того щоб браузер знав куди вертатись після оновлення корзини*@
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm border-right" style="float:right">Add to cart</button>
        </span>
    </form>
</div>